{% extends "master.j2" %}

{% block content %}
{{super()}}

<div class="container" style='margin-top:10px;'>
    <div class="row">
        <div class="col">
        <h2 style='margin-bottom:10px'> Login </h2>
        Don't have an account? <a href={{url_for('register')}}> Click here to register. </a>
        <form action="/login" method = "post">
          <input id="next" name="next" type="hidden" value="/">
          <div class="form-group">
            <label for="email">Email: </label>
            <input required class="form-control" type="email" id="email" name="email" placeholder=""> 
          </div>
          <div class="form-group">
            <label for="password">Password: </label>
            <input required class="form-control" type="password" id="password" name="password" placeholder="">
          </div>
          <div class="form-group">
            <label for='remember' style='margin-right:2px'>Remember Password?</label>
            <input type='checkbox' id='remember' name='remember'>
          </div>
          <button type="submit" class="btn btn-primary">Log In</button>
        </form>
        </div>
    </div>
</div>
{% endblock %}
