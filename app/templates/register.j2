{% extends "master.j2" %}

{% block content %}
{{super()}}

<div class="container" style='margin-top:10px;'>
    <div class="row">
        <div class="col">
        <h2> Register </h2>
        <form action="/register" method = "post">
          <input id="next" name="next" type="hidden" value="/">
          <div class="form-group">
            <label for="email">Email: </label>
            <input required class="form-control" type="email" id="email" name="email" placeholder="email@somedomain.com"> 
          </div>
          <div class="form-group">
            <label for="password">Password: </label>
            <input required class="form-control" type="password" id="password" name="password" placeholder="Pick a strong password!">
          </div>
          <div class="form-group">
            <label for="password">Verify Password: </label>
            <input class="form-control" type="password2" id="password2" name="password2" placeholder="">
          </div>
          <div class="form-group">
            <label for='remember' style='margin-right:2px'>Remember Password?</label>
            <input type='checkbox' id='remember' name='remember'>
          </div>
          <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
        </div>
    </div>
</div>
{% endblock %}